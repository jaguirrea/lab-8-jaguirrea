<div class='container'>
<p style="color: green"><%= notice %></p>

<h1>Dishes</h1>

<div id="dishes">
  <% @dishes.each do |dish| %>
    <%= render dish %>
    <p>
      <%= link_to "Show this dish", dish, class: 'btn btn-warning btn-sm' %>
    </p>
  <% end %>
</div>

<%= link_to "New dish", new_dish_path, class: 'btn btn-primary btn-sm' %>
</div>