<div class='container'>
<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= render restaurant %>
    <p>
      <%= link_to "Show this restaurant", restaurant, class: 'btn btn-warning btn-sm' %>
    </p>
  <% end %>
</div>

<%= link_to "New restaurant", new_restaurant_path , class: 'btn btn-primary btn-sm' %>
</div>